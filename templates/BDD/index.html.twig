{% extends 'base.html.twig' %}

{% block title %}Test{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Gestion des tables</h1>

        <div class="col">
            <div class="wrapper-editor">
              
                <div class="row d-flex justify-content-center modalWrapper">
                    <div class="modal fade addNewInputs" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="modalAdd"
                        aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header text-center">
                                    <h4 class="modal-title w-100 font-weight-bold text-primary ml-5">Ajouter une nouvelle table</h4>
                                    <button type="button" class="close text-primary" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <form method="post">
                                    <div class="modal-body mx-3">
                                        <div class="md-form mb-5">
                                            <input type="text" 
                                                id="name" 
                                                name="name" 
                                                class="form-control validate" required>
                                            <label data-error="wrong" data-success="right" for="name">Nom de la table</label>
                                        </div>
                                    </div>
                                    <div class="modal-footer d-flex justify-content-center buttonAddFormWrapper">
                                        <button type="submit" 
                                            class="btn btn-outline-primary btn-block buttonAdd">Add
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <a href="" class="btn btn-info btn-rounded btn-sm" data-toggle="modal" data-target="#modalAdd">Add<i
                            class="fas fa-plus-square ml-1"></i></a>
                    </div>
                </div>
              
                <table id="dtBasicExample" class="table table-striped table-bordered" cellspacing="0" width="100%">
                  <thead>
                    <tr>
                        <th class="th-sm">Name</th>
                        <th class="th-sm">Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for table in tables %}
                        <tr role="row" class="odd">
                            <td>{{ table["Tables_in_DRWork"] }}</td>
                            <td>
                                <div class="row justify-content-center">
                                    <div class="text-center buttonEditWrapper">
                                        <a href="/DB/{{table["Tables_in_DRWork"]}}">
                                            <button class="btn btn-info btn-rounded btn-sm buttonEdit">Show</button>
                                        </a>
                                    </div>
                                    <div class="text-center">
                                        <button class="btn btn-danger btn-sm btn-rounded buttonDelete" data-toggle="modal" data-target="#modalDelete{{table["Tables_in_DRWork"]}}">Delete<i class="fas fa-times ml-1"></i></a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <div class="row d-flex justify-content-center modalWrapper">
                            <div class="modal fade" id="modalDelete{{table["Tables_in_DRWork"]}}" tabindex="-1" role="dialog" aria-labelledby="modalDelete"
                                aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header text-center">
                                            <h4 class="modal-title w-100 font-weight-bold ml-5 text-danger">Delete</h4>
                                            <button type="button" class="close text-danger" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body mx-3">
                                            <p class="text-center h4">Êtes-vous sûr de vouloir supprimer la table {{table["Tables_in_DRWork"]}} ?</p>
                                
                                        </div>
                                        <div class="modal-footer d-flex justify-content-center deleteButtonsWrapper">
                                            <a href="/DB/delete/table/{{table["Tables_in_DRWork"]}}" class="btn btn-danger btnYesClass">Yes</a>
                                            <button type="button" class="btn btn-primary btnNoClass" id="btnNo" data-dismiss="modal">No</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                  </tbody>
                </table>
              </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="js/table.js"></script>
{% endblock %}